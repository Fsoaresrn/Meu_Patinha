{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "jsx": "react-jsx", // or "preserve" if you are not transforming JSX in Babel
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "types": ["jest", "node", "@testing-library/jest-dom"]
  },
  "include": [
    "**/*.test.ts",
    "**/*.test.tsx",
    "**/*.spec.ts",
    "**/*.spec.tsx",
    "src/**/*.ts", // Include your source files
    "src/**/*.tsx",
    "jest.config.js",
    "jest.setup.js",
    "__mocks__/**/*.ts",
    "__mocks__/**/*.tsx"
  ],
  "exclude": [
    "node_modules",
    ".next"
  ]
}
